<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.thisdote.communityfordevelopers.user.query.UserMapper">

    <resultMap id="userResultMap" type="org.thisdote.communityfordevelopers.user.dto.UserDTO">
        <id property="userCode" column="USER_CODE"/>
        <result property="userId" column="USER_ID"/>
        <result property="userPassword" column="USER_PASSWORD"/>
        <result property="userBirthday" column="USER_BIRTHDAY"/>
        <result property="userPhone" column="USER_PHONE"/>
        <result property="userEmail" column="USER_EMAIL"/>
        <result property="userStudyGroupStatus" column="USER_STUDYGROUP_STATUS"/>
        <result property="userRegistDate" column="USER_REGIST_DATE"/>
        <result property="userInfoUpdateDate" column="USER_INFO_UPDATE_DATE"/>
        <result property="userGrade" column="USER_GRADE"/>
    </resultMap>

    <resultMap id="studyGroupMemberResultMap" type="org.thisdote.communityfordevelopers.user.dto.UserDTO" extends="userResultMap">
        <association property="studyGroupMemberDTO" javaType="org.thisdote.communityfordevelopers.studygroup_member.dto.StudyGroupMemberDTO">
            <result property="studyGroupId" column="STUDYGROUP_ID"/>
            <result property="studyGroupRole" column="STUDYGROUP_ROLE"/>
            <result property="studyGroupRegistDate" column="STUDYGROUP_REGIST_DATE"/>
            <result property="userCode" column="USER_CODE"/>
        </association>
    </resultMap>

    <select id="selectAllUser" resultMap="userResultMap">
        SELECT
               A.USER_CODE
             , A.USER_ID
             , A.USER_PASSWORD
             , A.USER_BIRTHDAY
             , A.USER_PHONE
             , A.USER_EMAIL
             , A.USER_STUDYGROUP_STATUS
             , A.USER_REGIST_DATE
             , A.USER_INFO_UPDATE_DATE
             , A.USER_GRADE
          FROM USER A
    </select>

    <select id="selectUserId" resultMap="userResultMap" parameterType="String">
        SELECT
               A.USER_CODE
             , A.USER_ID
             , A.USER_PASSWORD
             , A.USER_BIRTHDAY
             , A.USER_PHONE
             , A.USER_EMAIL
             , A.USER_STUDYGROUP_STATUS
             , A.USER_REGIST_DATE
             , A.USER_INFO_UPDATE_DATE
             , A.USER_GRADE
          FROM USER A
         WHERE USER_ID = #{userId};
    </select>

    <select id="selectUserCode" resultMap="userResultMap" parameterType="_int">
        SELECT
               A.USER_CODE
             , A.USER_ID
             , A.USER_PASSWORD
             , A.USER_BIRTHDAY
             , A.USER_PHONE
             , A.USER_EMAIL
             , A.USER_STUDYGROUP_STATUS
             , A.USER_REGIST_DATE
             , A.USER_INFO_UPDATE_DATE
             , A.USER_GRADE
          FROM USER A
         WHERE USER_CODE = #{userCode};
    </select>

    <select id="selectUserByUserCode" resultMap="studyGroupMemberResultMap">
        SELECT
               A.USER_CODE
             , A.USER_ID
             , A.USER_PASSWORD
             , A.USER_BIRTHDAY
             , A.USER_PHONE
             , A.USER_EMAIL
             , A.USER_STUDYGROUP_STATUS
             , A.USER_REGIST_DATE
             , A.USER_INFO_UPDATE_DATE
             , A.USER_GRADE
             , B.STUDYGROUP_ID
             , B.STUDYGROUP_ROLE
             , B.STUDYGROUP_REGIST_DATE
             , B.USER_CODE
          FROM USER A
          JOIN STUDYGROUP_MEMBER B ON (A.USER_CODE = B.USER_CODE)
         WHERE A.USER_CODE = #{userCode}
    </select>

</mapper>